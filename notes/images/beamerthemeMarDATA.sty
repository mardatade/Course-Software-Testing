\def\cauxiii@slidetitle@title{\inserttitle}
\def\cauxiii@slidetitle@part{%
  \ifx\insertpart\@empty\cauxiii@slidetitle@title
  \else\insertshortpart\fi
}
\def\cauxiii@slidetitle@section{%
  \ifx\insertsection\@empty\cauxiii@slidetitle@part
  \else\insertsectionhead\fi
}
\def\cauxiii@slidetitle@subsection{%
  \ifx\insertsubsection\@empty\cauxiii@slidetitle@section
  \else\insertsubsectionhead\fi
}
\DeclareOptionBeamer{slidetitle}[1]{%
  \expandafter\let
  \expandafter\cauxiii@insertslidetitle
              \csname cauxiii@slidetitle@#1\endcsname
}
\let\cauxiii@insertslidetitle\cauxiii@slidetitle@title


\def\cauxiii@scheme#1{%
  \expandafter\let\csname cauxiii@#1\endcsname\@firstofone
